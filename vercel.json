{
  "version": 2,
  "buildCommand": "SHARP_IGNORE_GLOBAL=true pnpm install && chmod +x ./scripts/update-route-params.sh && ./scripts/update-route-params.sh && next build",
  "installCommand": "SHARP_IGNORE_GLOBAL=true pnpm install",
  "framework": "nextjs",
  "env": {
    "SHARP_IGNORE_GLOBAL": "true"
  },
  "functions": {
    "app/api/generate-image-direct/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/generate-image/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/generate-image-task/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/generate-image/process/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/generate-image/create/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "ignoreCommand": "echo Skipping ignored files...",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-tasks",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/fix-pending-orders",
      "schedule": "*/15 * * * *"
    }
  ]
}